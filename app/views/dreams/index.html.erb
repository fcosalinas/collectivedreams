<h1>Listing dreams</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Title</th>
      <th>Place</th>
      <th>Max assistance</th>
      <th>Min assistance</th>
      <th>Event date</th>
      <th>Event value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dreams.each do |dream| %>
      <tr>
        <td><%= dream.description %></td>
        <td><%= dream.title %></td>
        <td><%= dream.place %></td>
        <td><%= dream.max_assistance %></td>
        <td><%= dream.min_assistance %></td>
        <td><%= dream.event_date %></td>
        <td><%= dream.event_value %></td>
        <td><%= link_to 'Show', dream %></td>
        <td><%= link_to 'Edit', edit_dream_path(dream) %></td>
        <td><%= link_to 'Destroy', dream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

