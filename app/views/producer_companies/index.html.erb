<h1>Listing producer_companies</h1>

<div class="table-responsive">
  <table class="table table-bordered center">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Dirección</th>
      <th>Teléfono</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @producer_companies.each do |producer_company| %>
      <tr>
        <td><%= producer_company.name %></td>
        <td><%= producer_company.address %></td>
        <td><%= producer_company.phone %></td>
        <td><%= link_to 'Show', producer_company %></td>
        <td><%= link_to 'Edit', edit_producer_company_path(producer_company) %></td>
        <td><%= link_to 'Destroy', producer_company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

